<?xml version="1.0" encoding="utf-8"?>
<!--
#    Spherical coordinate and Cartesian coordiante
#
#  (theta, phi)
#
#                ^ (0, phi)
#                | +Y
#                |   
#  (90,0)        |
#    <___________|____________
#      +Z       /        (90,180)
#              /
#             /
#    (90,90) /  +X
#           v  
#
#    x = r * sin(theta) * sin(phi)
#    y = r * cos(theta)
#    z = r * sin(theta) * cos(phi)
-->

<scene version="0.5.0">
<!--+========================================+
    |          Key Light Blocker             | 
    +========================================+-->
  <shape type="disk">
    <bsdf type="diffuse">
      <srgb name="reflectance" value="#000000"/>
    </bsdf>
    <transform name="toWorld">
      <scale value="7"/>
      <translate x="0" y="0" z="100"/>
      <rotate x="1" angle="-90"/>
      <rotate x="1" angle="50.2"/>
      <rotate y="1" angle="77"/>
    </transform>
  </shape>


<!--+========================================+
    |              Back Light                | 
    +========================================+-->
  <shape id="theReflector" type="rectangle">
    <bsdf type="diffuse">
      <texture name="reflectance" type="bitmap">
        <string name="filename" value="./texture/backLightReflector.exr"/>
      </texture>
    </bsdf>
    <transform name="toWorld">
      <scale x="26" y="70" z="1"/>
      <rotate y="1" angle="90"/>
      <translate x="0" y="70" z="0"/>
      <rotate z="1" angle="81.6"/>
      <translate x="0" y="-50" z="-22"/>
    </transform>
  </shape>


<shape id="aPlaneLightSource" type="rectangle">
  <emitter type="area"><rgb name="radiance" value="5 4.5 3"/></emitter>
  <boolean name="flipNormals" value="false"/>
  <transform name="toWorld">
    <scale x="26" y="40" z="1"/>
    <rotate y="1" angle="90"/>
    <rotate z="1" angle="-90"/>
    <translate x="-65" y="0" z="-22"/>
  </transform>
</shape>

</scene>