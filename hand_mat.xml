<?xml version="1.0" encoding="utf-8"?>
<!-- This file contains the BSDF configuration for the hand skin.
The structure is listed below:

[1]hand (blendbsdf)
+- [2]fingernail (mixturebsdf)
   +- [2.1]color texture (diffuse)
   +- [2.2]a specular surface (mixturebsdf = roughconductor + roughconductor)
+- [3]skin (mixturebsdf)
   +- [3.1]color bumpmap (bumpmap)
   +- [3.2]a specular surface (mixturebsdf = roughconductor + roughconductor)

The texture files are stored in:
texture/Hand_3D_SPEC.jpg
texture/Hand_3D_BUMP.jpg
texture/Hand_3D_BUMP_CONTRAST.jpg
texture/Hand_3D_SPEC.jpg
-->

<scene version="0.5.0">

  <!-- [1] hand -->
  <bsdf type="blendbsdf" id="hand_mix">
    <texture name="weight" type="bitmap">
      <string name="filename" value="texture/Hand_3D_SPEC.jpg"/>
    </texture>

    <!-- [2] fingernail -->
    <bsdf type="mixturebsdf" id="part_fingernail">
      <string name="weights" value="0.84, 0.16"/>

      <!-- [2.1] color texture -->
      <bsdf type="diffuse">
        <texture name="reflectance" type="bitmap">
          <string name="filename" value="texture/Hand_3D_COLOR.jpg"/>
        </texture>
      </bsdf>

      <!-- [2.2] specular surface -->
      <bsdf type="mixturebsdf">
        <string name="weights" value="0.5, 0.5"/>
        <bsdf type="roughconductor">
          <string name="distribution" value="ggx"/>
          <float name="alpha" value="0.20"/>
          <srgb name="specularReflectance" value="#97A2A8"/>
        </bsdf>
        <bsdf type="roughconductor">
          <string name="distribution" value="ggx"/>
          <float name="alpha" value="0.20"/>
          <srgb name="specularReflectance" value="#E6F6FF"/>
        </bsdf>
      </bsdf>
    </bsdf>

    <!-- [3] skin -->
    <bsdf type="mixturebsdf" id="part_handskin">
      <string name="weights" value="0.9, 0.1"/>

      <!-- [3.1] color bumpmap -->
      <bsdf type="bumpmap">
        <bsdf type="diffuse">
          <texture name="reflectance" type="bitmap">
            <string name="filename" value="texture/Hand_3D_COLOR.jpg"/>
          </texture>
        </bsdf>
        <texture type="scale">
          <!--  bump height -->
          <float name="scale" value="0.015"/>
          <texture type="bitmap">
            <string name="filename" value="texture/Hand_3D_BUMP.jpg"/>
            <string name="filterType" value="trilinear"/>
          </texture>
        </texture>
      </bsdf>

      <!-- [3.2] specular surface -->
      <bsdf type="blendbsdf">
        <texture name="weight" type="bitmap">
          <string name="filename" value="texture/Hand_3D_BUMP_CONTRAST.jpg"/>
        </texture>
        <bsdf type="roughconductor">
          <string name="distribution" value="ggx"/>
          <float name="alpha" value="0.36"/>
          <srgb name="specularReflectance" value="#97A2A8"/>
        </bsdf>
        <bsdf type="roughconductor">
          <string name="distribution" value="ggx"/>
          <float name="alpha" value="0.36"/>
          <srgb name="specularReflectance" value="#E6F6FF"/>
        </bsdf>
      </bsdf>
    </bsdf>
  </bsdf>
  <!-- [1] end of hand BSDF -->

  <!-- Hand with BUMP -->
  <bsdf type="bumpmap" id="hand_bump">
    <bsdf type="diffuse">
      <texture name="reflectance" type="bitmap">
        <string name="filename" value="texture/Hand_3D_COLOR.jpg"/>
        <string name="filterType" value="trilinear"/>
      </texture>
    </bsdf>

    <texture type="scale">
      <float name="scale" value="0.1"/>
      <texture type="bitmap">
        <string name="filename" value="texture/Hand_3D_COLOR.jpg"/>
      </texture>
    </texture>
  </bsdf>

  <!-- Hand COLOR -->
  <bsdf type="diffuse" id="hand_color">
    <texture name="reflectance" type="bitmap">
      <string name="filename" value="texture/Hand_3D_COLOR.jpg"/>
      <string name="filterType" value="trilinear"/>
    </texture>
  </bsdf>

</scene>
